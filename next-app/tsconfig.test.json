{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".test-dist",
    "module": "Node16",
    "target": "ES2020",
    "moduleResolution": "node16",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["lib/**/*.ts", "types/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
